{
  "app": {
    "plugins": {
      "router": {
        "options": {
          "params": {
            "gender": "(\\w+)",
            "age": "(\\d+)",
            "id": "(\\d{1})"
          },
          "routes": {
            "index": {
              "method": "GET",
              "path": "/",
              "handler": "index"
            }
          }
        }
      }
    }
  },
  "sites": [
  {
    "id": "dogs",
    "hostmap": [ "dogsdogsdogs.com" ],
    "plugins": {
      "router": {
        "module": "/tests/dogrouter.js",
        "options": {
          "params": {
            "bark": "bark-(loud|quiet)"
          },
          "routes": {
            "search": {
              "method": "GET",
              "path": "/dogs/:gender/:bark/:age",
              "handler": "dogs"
            },
            "single": {
              "method": "GET",
              "path": "/dog/:id",
              "query": [ "hidePictures" ],
              "handler": "dog"
            },
            "create": {
              "method": "POST",
              "path": "/create/dog/:id",
              "body": [ "gender", "age", "phone" ],
              "handler": "create"
            }
          }
        }
      }
    }
  },
  {
    "id": "cats",
    "hostmap": [ "catscatscats.com" ],
    "plugins": {
      "router": {
        "module": "/tests/catrouter.js",
        "options": {
          "params": {
            "claws": "claws-(yes|no)"
          },
          "routes": {
            "search": {
              "method": "GET",
              "path": "/cats/:gender/:claws/:age",
              "handler": "cats"
            },
            "single": {
              "method": "GET",
              "path": "/cat/:id",
              "handler": "cat"
            }
          }
        }
      }
    }
  }
  ],
  "server": {
    "listen": {
      "port": "8081"
    },
    "logger": {
        "defaults": {
            "handleExceptions": false,
            "json": false,
            "timestamp": true,
            "colorize": true,
            "prettyPrint": true
        },
        "transports": [{
            "transport": "Console",
            "options": {
                "level": "info"
            }
        }]
    }
  }
}